<section id="schedule" class="section-with-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-header">
            <h2>CALENDÁRIO DO EVENTO</h2>
            <p>Aqui está a nossa agenda de eventos</p>
        </div>

        <ul class="nav nav-tabs" role="tablist" data-aos="fade-up" data-aos-delay="100">

            {% for index, dia in  diasEvento %}

                <li class="nav-item" style="padding-bottom: 5px;">
                    <a class="nav-link {% if index == 0 %} active {% endif %}" href="#day-{{ index }}" role="tab" data-bs-toggle="tab">
                        Dia {{ dia.dia }}
                        <br>{{ dia.data|date("d/m/Y") }}
                    </a>
                </li>

            {% endfor %}

