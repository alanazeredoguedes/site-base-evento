        </ul>

        <h3 class="sub-heading">....</h3>

        <div class="tab-content row justify-content-center" data-aos="fade-up" data-aos-delay="200">

            {% for index, dia in diasEvento %}

                <div role="tabpanel" class="col-lg-9 tab-pane fade {% if index == 0 %} show active {% endif %}" id="day-{{ index }}">


                    {% for atividade in atividadesEvento %}
                        {% if dia.dia == atividade.diaEvento.dia  %}

                            <div class="row schedule-item">
                                <div class="col-md-2"><time>{{ atividade.horario|date('H:i A') }}</time></div>
                                <div class="col-md-10">
                                    {% if atividade.palestrante is defined and atividade.palestrante is not empty %}
                                        {% if atividade.palestrante.foto is defined and atividade.palestrante.foto is not empty %}
                                            <div class="speaker">
                                                {% thumbnail atividade.palestrante.foto , 'reference' with {'class': 'logo_atividade_palestrante img-fluid'}  %}
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                    <h4>
                                        {{ atividade.atividade }}

                                        {% if atividade.palestrante is defined and atividade.palestrante is not empty %}
                                            <span>{{ atividade.palestrante.nome }}</span>
                                        {% endif %}

                                    </h4>
                                    <p>{{ atividade.descricao }}</p>
                                </div>
                            </div>

                        {% endif %}

                    {% endfor %}


                </div>

            {% endfor %}
